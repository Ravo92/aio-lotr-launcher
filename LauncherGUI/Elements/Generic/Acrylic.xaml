<UserControl x:Class="LauncherGUI.Elements.Acrylic"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LauncherGUI.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="userControl" LayoutUpdated="OnLayoutUpdated" IsVisibleChanged="OnVisibilityChanged" Loaded="OnLoad">
    <Grid ClipToBounds="True" Width="{Binding ElementName=userControl, Path=ActualWidth}" Height="{Binding ElementName=userControl, Path=ActualHeight}">
        <Image x:Name="image" HorizontalAlignment="Left" VerticalAlignment="Top" Width="0" Height="0" Source="pack://application:,,,/LauncherGUI;component/Resources/Images/BGMap_acrylic.png" Stretch="Fill"/>
    </Grid>
</UserControl>
