<UserControl x:Class="LauncherGUI.Elements.HTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LauncherGUI.Elements"
             mc:Ignorable="d" 
             Width="64" Height="64" Background="Transparent" Cursor="Hand" MouseDown="OnClicked" MouseEnter="OnMouseEntered" MouseLeave="OnMouseLeft">
    <Grid>
        <Image x:Name="icon" Margin="13"/>
        <Border x:Name="indicator" Height="2" VerticalAlignment="Bottom" Background="#1CB3F1" Opacity="0"/>
        <Border x:Name="background" Background="#19FFFFFF" Opacity="0"/>
        <Border x:Name="hoverBackground" Background="#0CFFFFFF" Opacity="0"/>
    </Grid>
</UserControl>
