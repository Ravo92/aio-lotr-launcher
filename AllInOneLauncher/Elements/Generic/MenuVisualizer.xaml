<UserControl x:Class="AllInOneLauncher.Elements.MenuVisualizer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AllInOneLauncher.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" SizeChanged="OnResized" Loaded="OnLoaded">
    <Grid>
        <Grid x:Name="background" Background="Transparent" IsHitTestVisible="False"/>
        <Grid x:Name="content" MouseLeave="OnMouseLeave"/>
    </Grid>
</UserControl>
