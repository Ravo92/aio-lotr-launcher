<UserControl x:Name="LauncherParentSettingsWindow" x:Class="AllInOneLauncher.Pages.Primary.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:elements="clr-namespace:AllInOneLauncher.Elements"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1500">
    <Grid>
        <Grid MaxWidth="1300">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MaxWidth="500" MinWidth="280"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <elements:Acrylic Grid.Column="0" Margin="-4000,0,0,0"/>
            <Grid Background="#5B121212" Grid.Column="1" Margin="0,0,-4000,0"/>
            <Grid Grid.Column="0">
                <elements:SmoothScrollViewer>
                    <StackPanel HorizontalAlignment="Right" Margin="0,60,20,0" Width="200" x:Name="categoryTabs">
                        <TextBlock Text="{DynamicResource SettingsPageLauncherSectionHeader}" Foreground="#66FFFFFF" FontSize="13" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Button Tag="LauncherGeneral" Style="{DynamicResource ListButton}" Content="{DynamicResource SettingsPageLauncherSectionGeneral}" Foreground="#D8FFFFFF" HorizontalContentAlignment="Left" Margin="-10,0,0,2" Click="OnCategoryButtonClicked"/>
                        <Button Tag="LauncherLibrary" Style="{DynamicResource ListButton}" Content="{DynamicResource SettingsPageLauncherSectionLibrary}" Foreground="#D8FFFFFF" HorizontalContentAlignment="Left" Margin="-10,0,0,2" Click="OnCategoryButtonClicked"/>
                        <elements:Divider/>

                        <TextBlock Text="{DynamicResource SettingsPageBFME1SectionHeader}" Foreground="#66FFFFFF" FontSize="13" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Button Tag="BfmeGeneral(0)" Style="{DynamicResource ListButton}" Content="{DynamicResource SettingsPageBFMESectionGeneral}" Foreground="#D8FFFFFF" HorizontalContentAlignment="Left" Margin="-10,0,0,2" Click="OnCategoryButtonClicked"/>
                        <elements:Divider/>

                        <TextBlock Text="{DynamicResource SettingsPageBFME2SectionHeader}" Foreground="#66FFFFFF" FontSize="13" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Button Tag="BfmeGeneral(1)" Style="{DynamicResource ListButton}" Content="{DynamicResource SettingsPageBFMESectionGeneral}" Foreground="#D8FFFFFF" HorizontalContentAlignment="Left" Margin="-10,0,0,2" Click="OnCategoryButtonClicked"/>
                        <elements:Divider/>

                        <TextBlock Text="{DynamicResource SettingsPageRotWKSectionHeader}" Foreground="#66FFFFFF" FontSize="13" FontWeight="Bold" Margin="0,0,0,8"/>
                        <Button Tag="BfmeGeneral(2)" Style="{DynamicResource ListButton}" Content="{DynamicResource SettingsPageBFMESectionGeneral}" Foreground="#D8FFFFFF" HorizontalContentAlignment="Left" Margin="-10,0,0,2" Click="OnCategoryButtonClicked"/>
                        <elements:Divider/>
                    </StackPanel>
                </elements:SmoothScrollViewer>
            </Grid>
            <Grid Grid.Column="1">
                <elements:SmoothScrollViewer>
                    <Border x:Name="content" Margin="40,60,110,0"/>
                </elements:SmoothScrollViewer>
                <StackPanel Background="Transparent" Cursor="Hand" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,60,0,0" MouseDown="OnCloseClicked" Width="100">
                    <Path Width="35" Height="35" Fill="{Binding ElementName=close, Path=Foreground}" Stretch="Uniform" Data="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    <TextBlock x:Name="close" Text="{DynamicResource GenericClose}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" Margin="0,10,0,0" FontWeight="Medium"/>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="TextElement.Foreground" Value="#BFFFFFFF"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="TextElement.Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
